{
    "extends": ["eslint:recommended", "plugin:react/recommended", "prettier"],
    "plugins": ["prettier", "react"],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "es6": true,
      "jest": true
    },
    "rules": {
      "prettier/prettier": "warn",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error"
    }
  }
